h1 Media Transperancy
  br
  small An Overview of Public Money spent on Media-Cooperations and -Funding in Austria
#my-charts
.row#my-bar-charts
    h2 Filter
    #time-bar-chart.col-sm-6
      strong Years 
      a(href="javascript:timeBarChart.filterAll();updateAll();",style="display: none;").reset reset
      .clearfix
    #laws-bar-chart.col-sm-3
      strong Legal Background 
      a(href="javascript:lawsBarChart.filterAll();updateAll();",style="display: none;").reset reset
      .clearfix
    #expenses-bar-chart.col-sm-3
      strong Expenses 
      small (in million euros) 
      a(href="javascript:expensesBarChart.filterAll();updateAll();",style="display: none;").reset reset
      .clearfix      
  .row#my-tables
    .col-sm-5
      .row
        .span12
          form.custom-search-form.search-form.form-horizontal.pull-right#legalSearchForm
            .input-append.span12
              input(type="text",placeholder="Filter Rechtsträger")#legalSearch.search-query.mac-style
              button.btn
                span.glyphicon.glyphicon-search
      span#data-count-legal
      .table-responsive
        table.table.table-hover.my-data-table#legal-table
          th Rechtsträger 
            button#legalAlphabetOrder.btn
            span.glyphicon.glyphicon-sort-by-alphabet
          th Relationen 
            button#legalRelationOrder.btn
            span.glyphicon.glyphicon-sort-by-order
          th Summe 
            button#legalSumOrder.btn
            span.glyphicon.glyphicon-sort-by-order                  
    .col-sm-2
      strong Chord Chart
      .clearfix
      #chord-chart
    .col-sm-5
      .row
        .span12
          form.custom-search-form.search-form.form-horizontal.pull-right#mediaSearchForm
            .input-append.span12
              input(type="text",placeholder="Filter Media")#mediaSearch.search-query.mac-style
              button.btn
                span.glyphicon.glyphicon-search
      span#data-count-media
      .table-responsive
        table.table.table-hover.my-data-table#media-table
